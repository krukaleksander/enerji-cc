extends layout

block content
  form(method='post')
    button(type='submit' class='logout-btn') Wyloguj  
  div(class='gazomierz-wrapper container')
    h3 GazoMierz v. 1.0.0
    .gazomierz
      button(class='btn btn-info gazomierz__insert-price') Wycena
      .insert-price
        i(class="fas fa-times-circle" id='closeInsertGazPrice')
        form(action="/set-price")
          label(for="") Podaj wartość:
          input(type="text" placeholder='wartość z bazy')
          button(type='submit' class='btn btn-success') Zatwierdź
      div(class='agreement-start-gaz')
      label(for="agreementStartGaz") Umowa od:
      select(id='agreementStartGazMonth')
        option(class="oprion-12" value=12) 01
        option(class="oprion-11" value=11) 02 
        option(class="oprion-10" value=10) 03 
        option(class="oprion-9" value=9) 04 
        option(class="oprion-8" value=8) 05
        option(class="oprion-7" value=7) 06
        option(class="oprion-6" value=6) 07
        option(class="oprion-5" value=5) 08 
        option(class="oprion-4" value=4) 09
        option(class="oprion-3" value=3) 10
        option(class="oprion-2" value=2) 11 
        option(class="oprion-1" value=1) 12 
      select(id="endOfAgreementGaz")
        option(class="option-2022" value=2022) 2022
        option(class="option-2021" value=2021) 2021                
      div
        label(for="endOfNewAgreementGaz") Umowa do: 31.12. 
        select(id="endOfNewAgreementGaz")
          option(class="option-2022" value=2023) 2023
          option(class="option-2022" value=2022) 2022
          option(class="option-2021" value=2021) 2021    
      div
        p(class='gazomierz__label') Opłata handlowa:
        input(type="text" placeholder='np. 6,30' id='gazOh' class='gazomierz__input')
        p(class='gazomierz__label') Obecna stawka za mWh:
        input(type="text" placeholder='np. 137' id='gazActualPrice' class='gazomierz__input')
        p(class='gazomierz__label') Szacowane zużycie roczne mWh:
        input(type="text" placeholder='np. 45' id='gazMwh' class='gazomierz__input')
        p(class='gazomierz__label') Propozycja:
        input(type="text" placeholder='np. 120' id='gazProposition' class='gazomierz__input')
        button(class='gazomierz__calc btn btn-dark') Oblicz
      .gazomierz__summary
  script(src="/javascripts/smallparts/gazomierz.js")
  